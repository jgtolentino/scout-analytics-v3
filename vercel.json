{
  "version": 2,
  "builds": [
    {
      "src": "apps/dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/dashboard/dist"
      }
    }
  ],
  "buildCommand": "cd apps/dashboard && npm run build",
  "devCommand": "cd apps/dashboard && npm run dev",
  "installCommand": "npm install",
  "outputDirectory": "apps/dashboard/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}