{
  "version": 2,
  "name": "scout-v3",
  "builds": [
    {
      "src": "apps/dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/dashboard/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/dashboard/dist/$1"
    }
  ],
  "buildCommand": "cd apps/dashboard && npm run build",
  "devCommand": "cd apps/dashboard && npm run dev",
  "installCommand": "npm install",
  "outputDirectory": "apps/dashboard/dist",
  "framework": "vite",
  "redirects": [
    {
      "source": "/dashboard/(.*)",
      "destination": "/$1",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}